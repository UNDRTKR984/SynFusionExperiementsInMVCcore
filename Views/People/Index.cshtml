<link href="http://cdn.syncfusion.com/ej2/ej2-splitbuttons/styles/material.css" rel="stylesheet">

<style>
    .e-row[aria-selected="true"] .e-customizedExpandcell {
        background-color: #e0e0e0;
    }

    .e-grid.e-gridhover tr[role='row']:hover {
        background-color: #eee;
    }

    .e-expand::before {
        content: '\e5b8';
    }
</style>
<script>
    var ele = document.getElementById('container');
    if (ele) {
        ele.style.visibility = "visible";
    }
</script>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div id="container">
    <div id="Grid"></div>
</div>

<script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js" type="text/javascript"></script>
<script>


    var data = [];

    @foreach (var person in Model)
        {
            @:data.push({ Name: '@person.Name'});
        }

        ej.grids.Grid.Inject(ej.grids.Page, ej.grids.Sort, ej.grids.Filter);
        var grid = new ej.grids.Grid({
        dataSource: data,
        columns: [
            { field: 'Name', headerText: 'Name', textAlign: 'Left', width: 150, type: 'string' }
            ],
            width: 300,
            allowFiltering: true,
            allowPaging: true,
            pageSettings: { pageSize: 3 },
            allowSorting: true
        });

    grid.appendTo('#Grid');
</script>

